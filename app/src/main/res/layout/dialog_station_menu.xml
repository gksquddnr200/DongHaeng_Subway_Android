<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/lineSymLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/stn_menu_margin"
        android:gravity="center"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/stnNm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stn_menu_title_size"
        android:layout_marginStart="@dimen/stn_menu_margin"
        android:layout_marginTop="@dimen/stn_menu_margin"
        android:layout_marginEnd="@dimen/stn_menu_margin"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/stn_menu_margin"
            android:layout_weight="1"
            android:background="@drawable/start"
            android:gravity="center"
            android:padding="@dimen/stn_menu_padding" />


        <Button
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/stn_menu_margin"

            android:layout_weight="1"
            android:background="@drawable/stop"
            android:gravity="center"
            android:padding="@dimen/stn_menu_padding" />

        <Button
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/stn_menu_margin"
            android:layout_weight="1"
            android:background="@drawable/info"
            android:gravity="center"
            android:padding="@dimen/stn_menu_padding" />

    </LinearLayout>

</LinearLayout>